<div class = "guide-tour-page">
  <div class = "container">
    <div class = "row">
      <%= render 'errors', tour: @tour %>
      <%= form_for(@tour, url: guide_guide_tour_path(current_guide, @tour)) do |f| %>
        <div class = "col-md-4 col-xs-12">
          <h1>ツアー情報編集</h1>
        </div>
        <div class = "col-md-4 col-md-offset-3 col-xs-12">
          <h1><%= f.submit  "ツアー内容を変更", class: "btn btn-success btn-lg" %></h1>
        </div>
        <%= render 'tour_form', f: f %>
      <% end %>
    </div>
  </div>
</div>