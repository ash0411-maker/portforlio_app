<div class = "application-wrapper">
  <div class = "container">
    <div class = "row">
      <h1 class = "col-md-6 col-md-offset-3 col-xs-10 col-xs-offset-2">ツアー情報一覧</h1>
      <div class = "col-md-6 col-xs-10 col-xs-offset-1">
        <div class =  "panel panel-default category-search-box">
          <div class = "panel-heading">
            <h3 class="panel-title">ジャンル検索</h3>
          </div>
          <div class = "panel-body guide-genre-panel clearfix" >
            <% @genres.each do |genre| %>
              <p>
                <%= link_to guide_guide_tours_path(current_guide, genre_id: genre.id) do %>
                  <%= genre.name %>
                <% end %>
              </p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class = "row">
      <div class = "col-md-4 col-xs-12">
        <%= render 'partial/tours_second_wrapper', tours: @tours, genre: @genre %>
      </div>
    </div>
    <%= paginate @tours, class: "paginate" %>
  </div>
</div>


<%= javascript_include_tag 'tour_show.js' %>