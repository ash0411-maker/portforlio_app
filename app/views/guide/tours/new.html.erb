<div class = "container">
	<div class = "row">
		<%= render 'errors', tour: @tour %>
		<div class = "col-xs-12">
			<%= form_for(@tour, url: guide_guide_tours_path(current_guide)) do |f| %>
				<div class = "col-md-4 col-xs-10 col-xs-offset-1">
					<h1>ツアー新規投稿</h1>
				</div>
				<div class = "col-md-4 col-md-offset-3 col-xs-10 col-xs-offset-1">
					<h1><%= f.submit  "ツアー内容を保存", class: "btn btn-success btn-lg" %></h1>
				</div>
				<%= render 'tour_form', f: f %>
		    <% end %>
		</div>
	</div>
</div>






