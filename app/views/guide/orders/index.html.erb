<div class = "container">
	<div class = "row">
		<h2 class = "flash"><%= flash[:notice] %></h2>
		<div class = "col-xs-9">
			<h2>各ページで予約ステータスを変更しましょう。</h2>
		</div>
	</div>
	<div class = "row">
		<div class = "col-xs-9">
			<div class =  "panel panel-default text-center">
				<div class="panel-heading">
					<h1 class="panel-title">各ステータスページ</h1>
				</div>
				<div class = "panel-body" >
					<h2>
						<%= link_to guide_guide_new_order_path(current_guide) do %>
							<i class="far fa-calendar-alt"></i>
							ツアー開始前の予約
						<% end %>
					</h2>
				</div>
				<div class = "panel-body" >
					<h2>
						<%= link_to guide_guide_day_before_touring_path(current_guide) do %>
							<i class="fas fa-map-marker-alt"></i>
							ツアー前日・当日
						<% end %>
					</h2>
				</div>
				<div class = "panel-body" >
					<h2>
						<%= link_to guide_guide_finished_tour_path(current_guide) do %>
							<i class="far fa-calendar-check"></i>
							終了済みのツアー
						<% end %>
					</h2>
				</div>
			</div>
		</div>
		<div class = "col-xs-3">
			<table class = "table table-bordered">
				<tr>
					<th class = "active">
						<h3>総利益</h3>
					</th>
					<th>
						<h3>¥ <%= number_with_delimiter(@guide_total_sales) %></h3>
					</th>
				</tr>
			</table>
		</div>
	</div>
	<div class = "row">
		<div class = "col-xs-12">
			<h2>本日入った予約</h2>
			<table class = "table">
				<thead>
					<tr class = "active">
						<th class = "text-center">予約番号</th>
						<th class = "text-center">予約日時</th>
						<th class = "text-center">予約者</th>
						<th class = "text-center">参加人数</th>
						<th class = "text-center">売り上げ</th>
						<th class = "text-center">利益</th>
						<th class = "text-center"></th>
					</tr>
				</thead>
				<tbody>
					<% @todays_orders.each do |order| %>
						<tr class = "text-center">
							<td><%= order.id %></td>
							<td><%= order.tour_date.strftime("%Y-%m-%d %H:%M") %></td>
							<td><%= order.tourist.family_name %> <%= order.tourist.name %></td>
							<td><%= order.total_people %>名</td>
							<td>¥ <%= number_with_delimiter(order.total_price) %></td>
							<td>¥ <%= number_with_delimiter(order.guide_sales) %></td>
							<td>
								<% if @tourist_ids.include?(order.tourist.id) %>
									<%= link_to "チャットへ", guide_guide_room_path(current_guide, current_guide.rooms.find_by(tourist_id: order.tourist.id)), class: "btn btn-lg btn-warning" %>
								<% else %>
									<%= form_for(Room.new, url: guide_guide_rooms_path(current_guide)) do |f| %>
										<%= f.hidden_field :guide_id, :value => tour.guide.id %>
										<%= f.submit "チャットへ", class: "btn btn-lg btn-warning" %>
									<% end %>
								<% end %>
							</td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>






