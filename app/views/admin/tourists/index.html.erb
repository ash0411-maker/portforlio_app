<div class = "container">
	<div class = "row">
	<h2>ツーリスト一覧</h2>
	  	<div class="col-xs-12">
			<table class = "table">
				<thead>
					<tr class= "active">
						<th class = "text-center">会員ID</th>
						<th class = "text-center">登録日</th>
						<th class = "text-center">メールアドレス</th>
						<th class = "text-center">会員ステータス</th>
						<th class = "text-center"></th>
					</tr>
				</thead>
				<tbody>
					<% @tourists.each do |tourist| %>
						<% if tourist.deleted_at == nil %>
							<tr class = "text-center">
								<%= render 'tbody', tourist: tourist %>
							</tr>
						<% else %>

					<!-- 退会しているtourist -->
							<tr class = "text-center deleted_at">
								<%= render 'tbody', tourist: tourist %>
							</tr>
					<!-- 退会しているtourist -->
						<% end %>
					<%end%>
				</tbody>
			</table>
      	</div>
	</div>
</div>


