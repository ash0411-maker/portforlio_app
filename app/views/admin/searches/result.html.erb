<!------ 予約番号検索結果 ------>
<% if @model == 'order' %>
	<% if @order.nil? %>
		<div class = "result-text">
			<h2>予約IDが<strong class = "result-text-id"><%= @content %></strong>の予約はありません。</h2>
			<h2>
				<%= link_to "予約一覧へ", admin_orders_path, class: "btn btn-lg btn-warning" %>
			</h2>
		</div>
	<% else %>
		<h2 class = "result-text">予約IDが<strong class = "result-text-id"><%= @content %></strong>の検索結果</h2>
		<%= render 'partial/admin_order', order: @order %>
	<% end %>


