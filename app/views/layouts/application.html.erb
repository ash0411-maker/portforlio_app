<!DOCTYPE html>
<html>
  <head>
    <title>FANTRA</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header>
    <nav>
      <% if admin_signed_in? %>
        <%= link_to "FANTRA", admin_home_top_path, class: "logo" %>
      <% elsif guide_signed_in? %>
        <%= link_to "FANTRA", guide_home_top_path, class: "logo" %>
      <% end %>

      <% if admin_signed_in? %>
        <ul>
          <li>
            <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
          </li>
        </ul>
      <% elsif guide_signed_in? %>
        <ul>
          <li>
            <%= link_to "ログアウト", destroy_guide_session_path, method: :delete %>
          </li>
        </ul>
      <% else %>
        <ul>
          <li>
            <%= link_to new_guide_registration_path do %>
              ガイド登録
            <% end %>
            </li>
          <li>
            <%= link_to guide_session_path do %>
              <i class="fas fa-hiking fa-2x"></i>
              ガイドログイン
            <% end %>
          </li>
        </ul>
      <% end %>
    </nav>
  </header>
    <%= yield %>
  </body>
</html>
