<div class = "tours-first-wrapper">

	<%# --- ツーリストトップ画面の写真 --- %>
	<div class = "tourist-top-image">
		<div class = "tourist-top-image-box">
			<span class = "tourist-top-image-box-text">ツアー写真から予約に進みましょう</span>
		</div>
	</div>

	<%# ---- ジャンル検索ボタン ---- %>
	<div class = "container">
		<div class = "row">
			<div class = "genres-box">
				<div class = "col-xs-4 col-xs-offset-1">
					<h3 class = "tourist-headline">気になるジャンルから選択</h3>
				</div>
				<div class= "col-xs-5 col-xs-offset-2">
					<% @genres.each do |genre| %>
						<%= link_to tourist_tours_path(current_tourist, genre_id: genre.id), class: "btn btn-default tourist-genre-btn" do %>
							<% genre.name %>
						<% end %>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>
<div class = "tours-second-wrapper">
	<%= render 'partial/tours_second_wrapper', tours: @tours, genre: @genre %>
</div>

