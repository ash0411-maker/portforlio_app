<div class = "tours-first-wrapper">
	<%# --- ツーリストトップ画面の写真 --- %>
	<div class = "tourist-top-image">
		<div class = "tourist-top-image-box">
			<span class = "tourist-login-message"><%= flash[:notice] %></span>
			<span class = "tourist-top-image-box-text">あなただけの特別な旅を</br>FANTRAで見つけましょう</span>

		</div>
	</div>

	<%# ---- ジャンル検索ボタン ---- %>
    <div class = "genres-box-tab clearfix">
        <h3 class = "tourist-headline">気になるジャンルから選択</h3>
        <div class = "genre-menu-btns-box">
            <% @genres.each do |genre| %>
                <%= link_to tourist_tourist_tours_path(current_tourist, genre_id: genre.id), class: "btn btn-default tourist-genre-btn" do %>
                    <% genre.name %>
                <% end %>
            <% end %>
        </div>
    </div>
</div>
<div class = "tours-second-wrapper">
	<%= render 'partial/tours_second_wrapper', tours: @tours, genre: @genre, news: @news %>
</div>


<%= javascript_include_tag 'tour_show.js' %>