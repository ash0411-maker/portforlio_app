<div class = "container">
  <div class = "row">
    <div class = "col-md-8 col-md-offset-4 col-xs-12">
      <h3>ツーリストログイン画面</h3>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class = "row">
         <div class="guest-login">
           <%= link_to 'ゲストログイン（閲覧用）', guest_tourist_path, method: :post, class: "btn btn-primary col-md-6 col-xs-10 devise-login-text" %>
         </div>
        </div>

        <div class = "row">
          <div class="guest-login">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-md-6 col-xs-10 devise-login-text" %>
          </div>
        </div>

        <div class = "row">
          <div class="guest-login">
            <%= f.label :password %><br />
            <%= f.password_field :password, autocomplete: "current-password", class: "col-md-6 col-xs-10 devise-login-text" %>
          </div>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class = "row">
          <div class="devise-field">
            <%= f.submit "ログイン", class: "btn btn-warning col-md-6 col-xs-10 devise-login-text" %>
          </div>
        </div>
      <% end %>

      <%= render "devise/tourists/shared/links" %>
    </div>
  </div>
</div>

