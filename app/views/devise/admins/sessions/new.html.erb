<div class = "container">
  <div class = "row">
    <div class = "col-xs-8 col-xs-offset-4">
      <h2>管理者ログイン</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class = "row">
          <div class="guest-login">
            <%= link_to 'かんたんログイン（閲覧用）', guest_admin_path, method: :post, class: "btn btn-primary col-xs-6" %>
          </div>
        </div>

        <div class = "row">
          <div class="devise-field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-xs-6" %>
          </div>
        </div>

        <div class = "row">
          <div class="devise-field">
            <%= f.label :password %><br />
            <%= f.password_field :password, autocomplete: "current-password", class: "col-xs-6" %>
          </div>
        </div>

        <div class = "row">
          <% if devise_mapping.rememberable? %>
            <div class="devise-field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>
        </div>

        <div class = "row">
          <div class="devise-field">
            <%= f.submit "ログイン", class: "col-xs-6 btn btn-success" %>
          </div>
        </div>

      <% end %>
      <%= render "devise/admins/shared/links" %>
    </div>
  </div>
</div>